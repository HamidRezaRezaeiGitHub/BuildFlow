<configuration>
  <property name="LOG_DIR" value="${LOG_DIR:-logs}" />
  <property name="LOG_FILE" value="${LOG_FILE:-build-flow}" />

  <springProfile name="!uat &amp; !production">
    <property name="ACTIVE_PROFILE" value="default" />
  </springProfile>

  <springProfile name="uat">
    <property name="ACTIVE_PROFILE" value="uat" />
  </springProfile>

  <springProfile name="production">
    <property name="ACTIVE_PROFILE" value="production" />
  </springProfile>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/${LOG_FILE}-${ACTIVE_PROFILE}-main.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/archive/${LOG_FILE}-${ACTIVE_PROFILE}-main.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
      <maxFileSize>5MB</maxFileSize>
      <maxHistory>30</maxHistory>
      <totalSizeCap>100MB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
</configuration>
